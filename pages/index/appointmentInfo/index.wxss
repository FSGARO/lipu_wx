.tabCard {
	width: 82%;
	height: 220rpx;
	background-color: var(--cfff);
	box-shadow: 0 0 6rpx 4rpx #36a9fb;
	border-radius: 35rpx;
	padding: 0rpx 30rpx;
	position: absolute;
	left: 0;
	right: 0;
	top: 170rpx;
	margin: auto;
}

.yuyueBtn {
	height: 56rpx;
	line-height: 56rpx;
	border: 2rpx solid #36a9fb;
	color: #36a9fb;
	border-radius: 25rpx;
	padding: 0 20rpx;
}

.selectDate {
	width: 100vw;
	height: 70rpx;
	background-image: linear-gradient(to right, #a4d8fd, #f1f9ff);
	margin-top: 150rpx;
	padding: 0 40rpx;
	box-sizing: border-box;
}

.icon-riqi {
	color: #f57f3e;
	font-size: 42rpx;
}

.picker {
	width: 100vw;
}

.lessonList {
	display: flex;
	margin: 0 20rpx;
	border: #36a9fb 1px solid;
	border-bottom: none;
}

.lessonList .lessonTimeInfo {
	width: 60%;
	display: flex;
	align-items: center;
	/* padding: 10px 0; */
	border-right: #36a9fb 1px solid;
}

.lessonList .lessonTimeInfo .lessonTitle {
	width: 45%;
	display: flex;
    justify-content: center;
    align-items: center;
}

.lessonList .lessonTimeInfo .lessonTime {
	border-left: #36a9fb 1px solid;
	width: 55%;
	display: flex;
	align-items: center;
	height: 100%;
	justify-content: center;
}
.lessonList:last-child{
	border-bottom:#36a9fb 1px solid
}

.lessonList .lessonInfo {
	display: flex;
	align-items: center;
	margin-left: 20rpx;
	width: 60%;
	justify-content: center;
	padding: 10px 0;
}

.lessonList .vacant {
	color: #2ecc71;
}

.lessonList .overdue {
	color: #f74200;
}
