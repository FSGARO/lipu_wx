.indextop {
  color: var(--bglabel);
  padding-left: 60rpx;
  background-color: #fff;
}

.swiper {
  text-align: center;
}

swiper-item {
  /* padding: 0 40rpx; */
  box-sizing: border-box;
}

.swiper image {
  width: 100%;
  height: 100% !important;
  border-radius: 12rpx;
  overflow: hidden;
}

.menu .li {
  width: 48%;
  background-color: var(--menubg);
  color: var(--bglabel);
  height: 282rpx;
  border-radius: 18rpx;
  box-shadow: 4px 4px 4px #f8f8f8;
  margin-top: 30rpx;
  overflow: hidden;
  position: relative;
}

.backdrop {
  width: 120%;
  height: 120%;
  background: radial-gradient(#fff, transparent);
  background: -webkit-radial-gradient(#fff, transparent);
  background: -moz-radial-gradient(#fff, transparent);
  background: -ms-radial-gradient(#fff, transparent);
  background: -o-radial-gradient(#fff, transparent);
  position: absolute;
  left: -10%;
  top: -10%;
}

.container {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 666;
}

.menu .li:nth-child(2n) {
  margin-right: 0;
}

.menu-icon {
  width: 80rpx;
}

swiper, .banner-img {
  height: 370rpx;
}

.menu .iconfont {
  font-size: 90rpx;
}

.topHead .text {
  padding-left: 15rpx;
  font-size: 38rpx;
}

.saoma .text {
  font-size: 38rpx;
}

.sao {
  width: 40rpx;
