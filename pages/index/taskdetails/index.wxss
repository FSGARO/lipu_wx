@import '../../../utils/addaudio.wxss';

.setBox {
  margin-left: 0;
}

.content {
  margin-bottom: 160rpx;
  padding: 14rpx;
  font-size: 36rpx;
}

.target image {
  width: 90rpx;
  vertical-align: middle;
}

.con {
  padding: 0 30rpx;
}

.title {
  padding: 30rpx 0rpx 10rpx 0rpx;
  font-size: 38rpx;
  color: #242323;
}

.title-con-place {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  background-color: var(--cfff);
  padding: 20rpx;
  border-radius: 15rpx;
}

.title-con {
  background-color: var(--cfff);
  padding: 20rpx;
  border-radius: 15rpx;
}

.tab-lable {
  padding: 8rpx 20rpx;
  background-color: var(--pagecolor);
  border-radius: 35rpx;
}

.runTime .row {
  margin-bottom: 30rpx;
}

.time {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}

.clockbox {
  width: 100%;
  line-height: 40rpx;
}

.clock {
  width: 130rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 16rpx 10rpx 6rpx 0rpx;
}

.foot {
  position: fixed;
  width: calc(100vw - 20rpx);
  margin: auto;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  background-color: var(--cfff);
  padding: 20rpx 0;
  margin: 0 10rpx;
}

.url_item {
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 80rpx;
  line-height: 80rpx;
}

.source_item {
  height: 80rpx;
  line-height: 80rpx;
  /* border-bottom: 1rpx solid  rgb(210, 212, 218); */
}

.foot .icon {
  width: 50rpx;
}

.foot .label {
  border-right: 2rpx solid #ccc;
  margin: 0 2rpx;
  font-size: 34rpx;
}

.layout-box {
  width: 160rpx;
  height: 90rpx;
  border-radius: 20rpx;
  border: 4rpx solid #04b102;
}

.layout .flexspace {
  display: flex;
  justify-content: space-between;
}

.onPlay {
  background-color: #fff;
  width: 100%;
}

.bofang {
  margin-bottom: 16rpx;
  width: 100%;
}

.bofang .bofang-title {
  width: 200rpx;
  text-align: left;
  margin-bottom: 10rpx;
}

.bofang .bofang-list {
  width: calc(100% - 200rpx);

}

.bofang .bofang-con {
  margin-right: 10rpx;
}

.layout .chart {
  font-size: 28rpx;
}

/* 同步控制 */

.ctral_item {
  padding: 20rpx;
  background-color: #5f9ea0;
  color: #fff;
  text-align: center;
  margin: 14rpx;
  font-size: 32rpx;
}

.ctral_comment {
  font-size: 28rpx;
}

.detail_icon {
  background: linear-gradient(#6e9ef1, #b9c7e2);
}
.undetail_icon{
  background: linear-gradient(#a1a3a7, #dfe0e2);
}

.record_box {
  border-radius: 10rpx;
  width: calc(100vw - 30rpx);
  margin: auto;
  background: #fff;
  height: 80rpx;
  line-height:80rpx;
  margin-top: 20rpx 0;
  
}

.record_icon {
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 20rpx;
}
.record_title{
  color: #4d4a4a;
  padding-left: 20rpx;
}
.green{
  background-color: #04b102;
  color: #fff;
}