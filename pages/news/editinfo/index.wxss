.labelText input{
  width: 150rpx;
}
.playtime{
  text-align: left;
  margin-left: 20rpx;
}

.tabgroup{
  padding: 15rpx;
}
.tabtn{
  display: inline-block;
  margin-right:30rpx;
  padding: 10rpx 20rpx;
  margin-left: 10rpx;
  color:#888;
}
.active{
  color:#fff;
  background-color: #23ac3b;
  border-radius: 10rpx;
}

.show{
  display: block;
}
.hidden{
  display: none;
}
.content{
  background-color: #fff;
  width: 100%;
  height: 250rpx;
  overflow: hidden;
  margin-top: 10rpx;
  padding: 30rpx 40rpx;
}
.classlist{
  background-color: #fff;
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  padding: 18rpx 40rpx 10rpx 40rpx;
}

.newForm .content,.newForm .classlist{
  margin-top: 0;
  border-top-width: 2rpx;
  border-top-style: solid;
  border-top-color: var(--brcolor)
}
textarea{
  width: 100%;
  height: 100%;
}
.addcal{
  border-radius: 30rpx;
}
.formtitle{
  display: flex;
  background-color: #fff;
  width:100%;
  padding: 20rpx 40rpx;
  margin-top: 10rpx;
}


.tinput{
  display: inline-block;
}
.bj{
  margin-top: 20rpx;
  border: none;
}

.colorboard{
  width: 140rpx;
  height: 70rpx;
  background-color: #333;
}

